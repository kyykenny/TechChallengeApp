pipeline{
    agent any
    
    stages
    {
        stage('Terraform init & plan') {
            steps {
                sh 'terraform init'
                sh 'terraform import -lock=false aws_ecr_repository.servian-app-ecr-repo servian-app-ecr-repo'
                sh 'terraform plan '
            }
        }
        stage('approval') {
            options {
                timeout(time: 1, unit: 'HOURS') 
            }
            steps {
                input 'approve the plan to proceed and apply'
            }
        }
        stage('apply') {
            steps {
                sh 'terraform apply -auto-approve'
                cleanWs()
            }
        }
    }
}